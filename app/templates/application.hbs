<div class="container">
  {{partial 'navbar'}}
  
  <h1>Resources</h1>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |resource|}}
      <tr>
        <th>{{resource.uuid}}</th>
        <td>{{resource.description}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table> 
</div>